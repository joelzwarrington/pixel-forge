<% content_for :title, "Showing action" %>

<h1 class="font-bold text-4xl">Showing action</h1>

<%= turbo_stream_from @action %>
<%= render @action %>
<% if @action.active? %>
  <%= button_to "Stop action", action_path, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer" %>
<% end %>