<%= form_with(model: action, class: "contents") do |form| %>
  <% if action.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(action.errors.count, "error") %> prohibited this action from being saved:</h2>

      <ul class="list-disc ml-6">
        <% action.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :location_node_id %>
    <%= form.text_field :location_node_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": action.errors[:location_node_id].none?, "border-red-400 focus:outline-red-600": action.errors[:location_node_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :character_id %>
    <%= form.text_field :character_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": action.errors[:character_id].none?, "border-red-400 focus:outline-red-600": action.errors[:character_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :started_at %>
    <%= form.datetime_field :started_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": action.errors[:started_at].none?, "border-red-400 focus:outline-red-600": action.errors[:started_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :stopped_at %>
    <%= form.datetime_field :stopped_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": action.errors[:stopped_at].none?, "border-red-400 focus:outline-red-600": action.errors[:stopped_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :seed %>
    <%= form.text_field :seed, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": action.errors[:seed].none?, "border-red-400 focus:outline-red-600": action.errors[:seed].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :next_tick_at %>
    <%= form.datetime_field :next_tick_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": action.errors[:next_tick_at].none?, "border-red-400 focus:outline-red-600": action.errors[:next_tick_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :last_tick_at %>
    <%= form.datetime_field :last_tick_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": action.errors[:last_tick_at].none?, "border-red-400 focus:outline-red-600": action.errors[:last_tick_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
