<%= turbo_frame_tag action do %>
  <div class="bg-neutral-900 border-y sm:border border-neutral-600 divide-y divide-neutral-600 overflow-hidden sm:rounded-md shadow-md">
    <div class="p-4 flex gap-2 items-center">
      <%= image_tag("icons/map.png", height: 32, width: 32, class: "pixelized") %>
      <h2 class="font-bold"><%= action.recipe? ? action.recipe.name : action.node.name %></h2>
    </div>
    <% if action.recipe? %>
      <div class="divide-y divide-neutral-600">
        <div class="py-3.5 px-4 bg-neutral-950">
          <h2 class="font-semibold">Materials</h2>
          <p class="text-sm text-neutral-100">The materials required to perform this action.</p>
        </div>
        <ul role="list" class="divide-y divide-neutral-800 overflow-hidden bg-neutral-900 shadow-sm ring-1 ring-neutral-900/5">
          <% action.recipe.materials.each do |item, quantity| %>
            <li class="relative flex justify-between gap-x-6 px-4 py-3.5 hover:bg-neutral-800">
              <div class="flex min-w-0 gap-x-4">
                <div class="min-w-0 flex-auto">
                  <p class="text-sm/6 font-semibold">
                    <%= item.name %>
                  </p>
                  <p class="mt flex text-xs/5 text-neutral-200">
                    <%= quantity %>
                  </p>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="divide-y divide-neutral-600">
      <div class="py-3.5 px-4 bg-neutral-950">
        <h2 class="font-semibold">Drops</h2>
        <p class="text-sm text-neutral-100">The items dropped from this action.</p>
      </div>
      <ul role="list" class="divide-y divide-neutral-800 overflow-hidden bg-neutral-900 shadow-sm ring-1 ring-neutral-900/5">
        <% action.drops.each do |item, quantity| %>
          <li class="relative flex justify-between gap-x-6 px-4 py-3.5 hover:bg-neutral-800">
            <div class="flex min-w-0 gap-x-4">
              <div class="min-w-0 flex-auto">
                <p class="text-sm/6 font-semibold">
                  <%= item.name %>
                </p>
                <p class="mt flex text-xs/5 text-neutral-200">
                  <%= quantity %>
                </p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
