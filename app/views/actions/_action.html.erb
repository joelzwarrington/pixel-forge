<div id="<%= dom_id action %>" class="my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Location node:</strong>
    <%= action.location_node_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Character:</strong>
    <%= action.character_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Started at:</strong>
    <%= action.started_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stopped at:</strong>
    <%= action.stopped_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Seed:</strong>
    <%= action.seed %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Next tick at:</strong>
    <%= action.next_tick_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Last tick at:</strong>
    <%= action.last_tick_at %>
  </div>
</div>
