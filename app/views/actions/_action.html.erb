<%= turbo_frame_tag action do %>
  <div class="divide-y divide-neutral-700 overflow-hidden rounded-lg bg-neutral-900 shadow">
    <div class="px-4 py-5 sm:px-6">
      <h2>Action</h2>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <ul class="list-disc list-inside">
        <li><strong>Location:</strong> <%= action.location.name %></li>
        <li><strong>Node:</strong> <%= action.node.name %></li>
        <li><strong>Drops:</strong>
          <ul class="pl-4 list-disc list-inside">
            <% action.drops.each do |item, quantity| %>
              <li><%= item.name %>: <%= quantity %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
    <% if action.active? %>
      <%= button_to "Stop action", action, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer" %>
    <% end %>
  </div>
<% end %>