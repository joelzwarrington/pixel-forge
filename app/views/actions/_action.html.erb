<%= turbo_stream_from action %>

<%= turbo_frame_tag action do %>
  <ul class="my-2 list-disc list-inside">
    <li><strong>Location:</strong> <%= action.location.name %></li>
    <li><strong>Node:</strong> <%= action.node.name %></li>
    <li><strong>Drops:</strong>
      <ul class="pl-4 list-disc list-inside">
        <% action.drops.each do |item, quantity| %>
          <li><%= item.name %>: <%= quantity %></li>
        <% end %>
      </ul>
    </li>
  </ul>
<% end %>

<%= button_to "Stop action", character_action_path(action.character), method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer" %>