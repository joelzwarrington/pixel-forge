<% content_for :title, "Showing guild" %>

<h1 class="font-bold text-4xl">Showing guild</h1>

<%= render @guild %>

<%= link_to "Edit this guild", edit_guild_path(@guild), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
<%= link_to "Back to guilds", guilds_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
<div class="inline-block ml-2">
  <%= button_to "Destroy this guild", @guild, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
