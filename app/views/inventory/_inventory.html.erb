<%= turbo_frame_tag :inventory do %>
  <div class="bg-neutral-900 border-y md:border border-neutral-600 divide-y divide-neutral-600 overflow-hidden md:rounded-md shadow-md">
    <div class="p-4 flex gap-2 justify-between items-center">
      <div class="flex gap-2 items-center">
        <%= image_tag("icons/inventory.png", height: 32, width: 32, class: "pixelized") %>
        <h2 class="font-bold">Inventory</h2>
      </div>
      <div>
        <span class="inline-flex items-center rounded-md bg-neutral-700 px-2 py-1.5 gap-2 text-sm font-bold text-neutral-50 ring-1 ring-gray-500/10 ring-inset"><%= image_tag("icons/coins.png", height: 24, width: 24, class: "pixelized") %><%= inventory.coins %></span>
      </div>
    </div>
    <div class="p-4 grid grid-cols-[repeat(auto-fill,minmax(64px,1fr))] gap-2">
      <%= render inventory.items.all %>
    </div>
  </div>
<% end %>

