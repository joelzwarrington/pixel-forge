<%= turbo_frame_tag :inventory do %>
  <div class="bg-neutral-900 border-y sm:border border-neutral-600 divide-y divide-neutral-600 overflow-hidden sm:rounded-md shadow-md">
    <div class="p-4">
      <h2 class="font-semibold">Inventory</h2>
    </div>
    <div class="p-4 grid grid-cols-[repeat(auto-fill,minmax(64px,1fr))] gap-2">
      <%= render inventory.items.all %>
    </div>
  </div>
<% end %>

