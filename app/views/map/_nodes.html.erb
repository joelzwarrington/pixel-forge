<%= turbo_frame_tag :nodes do %>
  <% location = character.location %>
  <div class="divide-y divide-neutral-700 overflow-hidden rounded-lg bg-neutral-900 shadow">
    <div class="px-4 py-5 sm:px-6">
      <h2><%= location.name %></h2>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <ul class="pl-4 list-disc list-inside">
        <% action = ActionManager.active_for(character) %>
        <% location.nodes.each do |node| %>
          <li>
            <% if action&.location == location && action&.node == node %>
              <strong><%= node.name %></strong>
            <% elsif node.recipes.any? %>
              <strong><%= node.name %></strong>
              <ul class="pl-4 list-disc list-inside">
                <% node.recipes.each do |recipe| %>
                  <li>
                    <%= button_to recipe.name, action_path, params: { node_id: node.id, recipe_id: recipe.id }, data: { turbo: false }, form_class: "inline-block", class: "cursor-pointer font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <%= button_to node.name, action_path, params: { node_id: node.id }, data: { turbo: false }, form_class: "inline-block", class: "cursor-pointer font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>