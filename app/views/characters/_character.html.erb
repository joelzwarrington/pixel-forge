<div id="<%= dom_id character %>" class="my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= character.name %>
  </div>

  <div>
    <strong class="block font-medium mb-1">Locations:</strong>
    <ul class="my-2">
      <% Location.all.each do |location| %>
        <li>
          <%= location.name %> <% if location == character.location %><strong>(you are here)</strong><% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div>
    <strong class="block font-medium mb-1">Equipment:</strong>
    <ul class="my-2">
      <% character.equipment.all.each do |slot, item| %>
        <li><%= slot %>, <%= item&.name || "none" %></li>
      <% end %>
    </ul>
  </div>
  <div>
    <strong class="block font-medium mb-1">Inventory:</strong>
    <ul class="my-2">
      <% character.inventory.items.each do |item, quantity| %>
        <li><%= item.name %>, <%= quantity %></li>
      <% end %>
    </ul>
  </div>
</div>
