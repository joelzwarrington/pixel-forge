<% content_for :title, "Guild characters" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Guild characters</h1>
    <%= link_to "New guild character", new_guild_character_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="guild_characters" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @guild_characters.any? %>
      <% @guild_characters.each do |guild_character| %>
        <div class="flex justify-between items-center">
          <%= render guild_character %>
          <div class="space-x-2">
            <%= link_to "Show", guild_character, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_guild_character_path(guild_character), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <div class="inline-block">
              <%= button_to "Destroy", guild_character, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No guild characters found.</p>
    <% end %>
  </div>
</div>
