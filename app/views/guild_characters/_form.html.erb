<%= form_with(model: guild_character, class: "contents") do |form| %>
  <% if guild_character.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(guild_character.errors.count, "error") %> prohibited this guild_character from being saved:</h2>

      <ul class="list-disc ml-6">
        <% guild_character.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :guild_id %>
    <%= form.text_field :guild_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": guild_character.errors[:guild_id].none?, "border-red-400 focus:outline-red-600": guild_character.errors[:guild_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :character_id %>
    <%= form.text_field :character_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": guild_character.errors[:character_id].none?, "border-red-400 focus:outline-red-600": guild_character.errors[:character_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :role %>
    <%= form.text_field :role, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": guild_character.errors[:role].none?, "border-red-400 focus:outline-red-600": guild_character.errors[:role].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
