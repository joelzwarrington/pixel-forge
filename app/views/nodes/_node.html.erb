<%= turbo_frame_tag :node do %>
  <%= turbo_frame_tag node do %>
    <div class="bg-neutral-900 border-y sm:border border-neutral-600 divide-y divide-neutral-600 overflow-hidden sm:rounded-md shadow-md">
      <div class="p-4 flex gap-2 items-center">
        <%= image_tag("icons/map.png", height: 32, width: 32, class: "pixelized") %>
        <h2 class="font-bold"><%= node.name %></h2>
      </div>

      <section class="w-full relative flex justify-between gap-x-6 px-4 py-3.5 hover:bg-neutral-800">
        <% action = current_character.actions.active.first %>
        <% if action&.location_id == params[:location_id] && action&.node_id == node.id %>
          <%= render action %>
        <% else %>
          <%= button_to "start action", actions_path, params: { node_action: { location_id: params[:location_id], node_id: node.id }}, method: :post, data: { turbo: false } %>
        <% end %>
      </section>
    </div>
  <% end %>
<% end %>