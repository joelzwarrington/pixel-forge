<%= turbo_frame_tag :node do %>
  <%= turbo_frame_tag node do %>
    <div class="bg-neutral-900 border-y sm:border border-neutral-600 divide-y divide-neutral-600 overflow-hidden sm:rounded-md shadow-md">
      <div class="p-2 flex gap-2 items-center">
        <%= image_tag("icons/map.png", height: 32, width: 32, class: "pixelized") %>
        <h2 class="font-bold"><%= node.name %></h2>
      </div>

      <% if node.recipes.any? %>
        <%= form_with(model: Action.new) do |form| %>
          <%= form.hidden_field :location_id, value: location.id %>
          <%= form.hidden_field :node_id, value: node.id %>
        <% end %>
      <% elsif %>
        <ul>
          Drops
          <% node.drops.each do |drop| %>
            <li>
              <%= drop.item.name %>
            </li>
          <% end %>
        </ul>

        <%= form_with(model: Action.new, scope: "node_action") do |form| %>
          <%= form.hidden_field :location_id, value: location.id %>
          <%= form.hidden_field :node_id, value: node.id %>
          <%= form.submit "Begin" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>