<% content_for :title, @node.name %>

<div class="bg-neutral-900 border-y sm:border border-neutral-600 divide-y divide-neutral-600 overflow-hidden sm:rounded-md shadow-md">
  <div class="p-4 flex gap-4 items-center">
    <%= link_to @location, class: "inline-flex items-center gap-1 rounded-md bg-neutral-800 px-2 pr-2.5 py-1 text-xs text-neutral-50 ring-1 ring-neutral-200/10 ring-inset hover:bg-neutral-700 hover:ring-neutral-200/20" do %>
      <%= icon "arrow-long-left", variant: :micro, options: { class: "size-4"} %>
      Back
    <% end %>
    <h2 class="font-bold"><%= @node.name %></h2>
  </div>
  <%= render @node, location: @location %>
</div>

<div class="hidden">
  <%= turbo_frame_tag :modal do %>
    <%= render("shared/modal") do %>
      <div class="p-4 flex gap-4 items-center">
        <%= link_to @location, class: "inline-flex items-center gap-1 rounded-md bg-neutral-800 px-2 pr-2.5 py-1 text-xs text-neutral-50 ring-1 ring-neutral-200/10 ring-inset hover:bg-neutral-700 hover:ring-neutral-200/20" do %>
          <%= icon "arrow-long-left", variant: :micro, options: { class: "size-4"} %>
          Back
        <% end %>
        <h2 class="font-bold"><%= @node.name %></h2>
      </div>
      <%= render @node, location: @location %>
    <% end %>
  <% end %>
</div>