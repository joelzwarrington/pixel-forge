<div id="<%= dom_id inventory_item %>" class="my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Character:</strong>
    <%= inventory_item.character_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Item:</strong>
    <%= inventory_item.item_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= inventory_item.quantity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= inventory_item.weight %>
  </div>
</div>
