<div data-controller="modal" class="relative z-10" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-black/30" aria-hidden="true"></div>

  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div data-controller="click-outside" data-action="click-outside:click:outside->modal#close" class="relative transform overflow-hidden rounded-lg bg-neutral-800 border border-neutral-600 px-4 pt-5 pb-4 text-left shadow-xl transition-all w-full sm:my-8 sm:max-w-lg sm:p-6">
        <div class="mb-4 flex justify-end">
          <button type="button" data-action="modal#close" class="rounded-md bg-neutral-800 text-neutral-50 hover:text-neutral-100 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-hidden">
            <span class="sr-only">Close</span>
            <%= icon "x-mark", options: { class: "size-6" } %>
          </button>
        </div>
        <div class="-mx-4 sm:-mx-6">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
</div>
